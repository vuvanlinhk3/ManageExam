<Window x:Class="ManageExam.admin.view.diaLog.selectAddExam"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManageExam.admin.view.diaLog"
        mc:Ignorable="d"
           Title="SelectAddExam" Height="300" Width="500">
    <Grid>
        <Label Content="Lựa chọn kiểu đề" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Cambria" FontWeight="Bold"/>
        <RadioButton Content="Dạng đề từng câu 50 câu trắc nhiệm  " HorizontalAlignment="Left" Margin="26,70,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Cambria"/>
        <RadioButton Content="Đưa File đề lên và chọn đáp án trắc nhiệm 50 câu" HorizontalAlignment="Left" Margin="26,0,0,0" VerticalAlignment="Center" FontSize="18" FontFamily="Cambria"/>
        <Button Content="Button" Padding="20 5" HorizontalAlignment="Left" Margin="395,241,0,0" VerticalAlignment="Top" FontFamily="Cambria" FontSize="18" Background="#FFF3F3F3">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
