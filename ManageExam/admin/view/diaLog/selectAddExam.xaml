<Window x:Class="ManageExam.admin.view.diaLog.selectAddExam"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManageExam.admin.view.diaLog"
        mc:Ignorable="d"
           Title="SelectAddExam" Height="350" Width="510">
    <Grid>
        <Label Content="Nhập Thông Tin Tin Tức" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Cambria" FontWeight="Bold"/>
        <Button Content="OK" Padding="20 5" HorizontalAlignment="Left" Margin="395,241,0,0" VerticalAlignment="Top" FontFamily="Cambria" FontSize="18" Background="#FFF3F3F3" Width="95" Click="Button_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
        <TextBox x:Name="tintuc" HorizontalAlignment="Left" Margin="10,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="471" Height="195"/>
    </Grid>
</Window>
