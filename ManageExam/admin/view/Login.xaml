<Window x:Class="ManageExam.admin.view.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManageExam.admin.view"
        mc:Ignorable="d"
        Title="Login" Height="550" Width="800">
    <Grid>
        <Image Source="\Lib\anhnen.jpg" Stretch="Fill" Opacity="0.7"  />


        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image Source="\Lib\anh1.jpg" VerticalAlignment="Top" Width="250" HorizontalAlignment="Right" Canvas.Top="20" Canvas.Right="70" Opacity="0.8"  >
            </Image>

            <Grid>
                <Border Background="White"  BorderBrush="LightGray" BorderThickness="1" CornerRadius="20" Padding="7, 6" HorizontalAlignment="Left" VerticalAlignment="Top"  RenderTransformOrigin="0.49,1.549" Width="200" Margin="348,131,0,0">
                    <StackPanel>
                        <TextBox x:Name="tk"  Foreground="Gray" Background="Transparent" BorderThickness="0" Margin="0, 0, 0, 5" TextChanged="tk_TextChanged"/>
                    </StackPanel>
                </Border>
                <Border Background="White" BorderBrush="LightGray" BorderThickness="1" CornerRadius="20" Padding="7, 6" Canvas.Left="505" Canvas.Top="188" RenderTransformOrigin="0.49,1.549" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="348,197,0,0">
                    <StackPanel>
                        <PasswordBox x:Name="pass"  PasswordChar="*" BorderBrush="White"/>
                    </StackPanel>
                </Border>
                <Button  x:Name="quenmk" Canvas.Left="622" Canvas.Top="243" Margin="465,247,29,179" Background="Transparent" BorderThickness="0" Click="quenmk_Click">
                                            <Hyperlink NavigateUri="">Quên Mật Khẩu</Hyperlink>
                    
                </Button>
                <Border Background="BlanchedAlmond" BorderBrush="White" BorderThickness="1" CornerRadius="20" Padding="7, 6" Canvas.Left="505" Canvas.Top="275" RenderTransformOrigin="0.49,1.549" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="348,279,0,0">
                    <StackPanel>
                        <Button x:Name="login" Content="Đăng Nhập " Background="Transparent" BorderThickness="0" Margin="0, 0, 0, 5" Click="login_Click"></Button>

                    </StackPanel>
                </Border>

                <Label Canvas.Left="489" Canvas.Top="343" FontFamily="Cambria" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="339,349,0,0" >
                    Bạn chưa có tài khoản ?
                </Label>
                <Button x:Name="dki" Margin="488,351,10,73" RenderTransformOrigin="0.909,0.164"
                        Background="Transparent" BorderThickness="0" Click="dki_Click">
    <Hyperlink NavigateUri="">Đăng ký ngay</Hyperlink>
                </Button>
                <CheckBox Content="ghi nhớ" HorizontalAlignment="Left" Margin="348,247,0,0" VerticalAlignment="Top" Checked="CheckBox_Checked"/>
                <Label Content="LOGIN"  HorizontalAlignment="Left"  VerticalAlignment="Top" FontFamily="Bahnschrift SemiBold" FontSize="30" Foreground="#FF2523EB" Height="37" Width="100" FontWeight="Bold" Margin="404,34,0,0"/>
                <Label FontFamily="Cambria" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="348,102,0,0" Content="Nhập tài khoản của bạn : " />
                <Label FontFamily="Cambria" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="348,173,0,0" Content="Nhập mật khẩu của bạn :" />
            </Grid>
            
        </Grid>






        
    </Grid>
</Window>
