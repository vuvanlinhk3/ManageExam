<UserControl x:Class="ManageExam.admin.view.DSND"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ManageExam.admin.view"
             mc:Ignorable="d" 
             Width="1200" Height="800">
    <Grid>
        <Image Stretch="fill"  Source="/lib/Book2.jpg" Opacity="0.8" >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.053"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <ListView ItemsSource="{Binding Users}">
            <ListView.View>
                <GridView>
                    <GridView.ColumnHeaderContainerStyle>
                        <Style TargetType="{x:Type GridViewColumnHeader}">
                            <Setter Property="Margin" Value="0,15,0,0"/>
                        </Style>
                    </GridView.ColumnHeaderContainerStyle>
                    <GridViewColumn Width="50" Header="IDUSER" DisplayMemberBinding="{Binding IDUSER}" />
                    <GridViewColumn Width="130" Header="Name" DisplayMemberBinding="{Binding nameUSER}"/>
                    <GridViewColumn Width="100" Header="Password" DisplayMemberBinding="{Binding matkhauUSER}"/>
                    <GridViewColumn Width="100" Header="Phone" DisplayMemberBinding="{Binding sdtUSER}"/>
                    <GridViewColumn Width="200" Header="Email" DisplayMemberBinding="{Binding emailUSER}"/>
                    <!-- <GridViewColumn Header="Date" DisplayMemberBinding="{Binding ngaysinhUSER, StringFormat={}{0:yyyy-MM-dd}}"/>-->
                    <GridViewColumn Width="70" Header="Gender" DisplayMemberBinding="{Binding gioitinhUSER}"/>
                    <GridViewColumn Width="150" Header="Nationality" DisplayMemberBinding="{Binding quoctich}"/>
                    <GridViewColumn Width="70" Header="City" DisplayMemberBinding="{Binding tinhTp}"/>
                    <GridViewColumn Width="100" Header="District" DisplayMemberBinding="{Binding quanhuyen}"/>
                    
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Sửa Thông Tin" Click="SuaButton_Click"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Xóa" Click="DeleteButton_Click"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</UserControl>
